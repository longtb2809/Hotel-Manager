<Window x:Class="FUMiniHotelManagement.CustomerDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Dashboard" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f8f9fa">

        <!-- Header -->
        <DockPanel Background="#007bff" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Customer Dashboard" FontSize="18" FontWeight="Bold" 
                       Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Button x:Name="btnLogout" Content="Đăng xuất" Width="100" Height="30"
                    Margin="0,10,10,10" VerticalAlignment="Center" 
                    HorizontalAlignment="Right" Click="btnLogout_Click"/>
        </DockPanel>

        <!-- Main content buttons -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnView" Content="Xem hồ sơ" Width="200" Height="40" Margin="0,10" Click="btnView_Click"/>
            <Button x:Name="btnBooking" Content="Đặt phòng" Width="200" Height="40" Margin="0,10" Click="btnBooking_Click"/>
            <Button x:Name="btnBookingHistory" Content="Lịch sử đặt phòng" Width="200" Height="40" Margin="0,10" Click="btnBookingHistory_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
