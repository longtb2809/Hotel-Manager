<Window x:Class="FUMiniHotelManagement.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập thông tin khách hàng" Height="400" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Họ tên" />
            <TextBox x:Name="txtFullName" />

            <Label Content="Email" />
            <TextBox x:Name="txtEmail" />

            <Label Content="SĐT" />
            <TextBox x:Name="txtPhone" />

            <Label Content="Địa chỉ" />
            <TextBox x:Name="txtAddress" />

            <Label Content="CCCD" />
            <TextBox x:Name="txtIdentity" />

            <Label Content="Mật khẩu" />
            <PasswordBox x:Name="txtPassword" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Lưu" Width="80" Margin="5" Click="BtnSave_Click"/>
            <Button Content="Hủy" Width="80" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
