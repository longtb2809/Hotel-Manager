<Window x:Class="FUMiniHotelManagement.ViewProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin khách hàng" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#f8f9fa" Margin="20">

        <Border Background="White" CornerRadius="10" Padding="20" 
        VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel>

                <TextBlock Text="Thông tin cá nhân" FontSize="20" FontWeight="Bold" 
                           Foreground="#007bff" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Họ tên:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtFullName" Foreground="#333"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Email:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtEmail" Foreground="#333"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Số điện thoại:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtPhone" Foreground="#333"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Địa chỉ:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtAddress" TextWrapping="Wrap" Foreground="#333"/>
                </StackPanel>


                <Button x:Name="BtnClose" Content="Đóng" Width="100" Height="35" 
                        HorizontalAlignment="Center" Margin="0,20,0,0" 
                        Background="#dc3545" Foreground="White" 
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
