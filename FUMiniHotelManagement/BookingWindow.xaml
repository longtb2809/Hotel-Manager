<Window x:Class="FUMiniHotelManagement.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đặt Phòng" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" Background="#f8f9fa">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >

            <TextBlock Text="Đặt Phòng" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Phòng:"/>
            <ComboBox x:Name="cbRoom" Height="30" Margin="0,5"/>

            <TextBlock Text="Mô tả phòng:"/>
            <TextBlock x:Name="txtRoomDescription" Height="60" Margin="0,5" TextWrapping="Wrap" Background="#e9ecef" Padding="5"/>



            <TextBlock Text="Ngày nhận phòng:"/>
            <DatePicker x:Name="dpCheckIn" Height="30" Margin="0,5"/>
            

            <TextBlock Text="Ngày trả phòng:"/>
            <DatePicker x:Name="dpCheckOut" Height="30" Margin="0,5"/>

            <TextBlock Text="Tổng tiền (VNĐ):"/>
            <TextBox x:Name="txtTotal" Height="30" Margin="0,5" IsReadOnly="True" Background="#e9ecef"/>

            <Button x:Name="btnBook" Content="Đặt Phòng" Height="35" Margin="0,20,0,0" Click="btnBook_Click" Background="#007bff" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
