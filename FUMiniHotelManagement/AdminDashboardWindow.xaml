<Window x:Class="FUMiniHotelManagement.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f2f5">

        <!-- Header với nút Đăng xuất -->
        <DockPanel Background="#343a40" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Admin " FontSize="18" FontWeight="Bold"
                       Foreground="White" VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
            <Button x:Name="btnLogout" Content="Đăng xuất" Width="100" Margin="0,0,10,0"
                    HorizontalAlignment="Right" Click="btnLogout_Click"/>
        </DockPanel>

        <!-- Main content buttons -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="ManageCustomers" Content="Manage Customers" Width="200" Height="40" Margin="0,10" Click="ManageCustomers_Click"/>
            <Button x:Name="ManageRooms" Content="Manage Rooms" Width="200" Height="40" Margin="0,10" Click="ManageRooms_Click"/>
            <Button Content="Manage Bookings" Width="200" Height="40" Margin="0,10" Click="ManageBookings_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
